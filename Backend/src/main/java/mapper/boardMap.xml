<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="board">
 <!-- 
 insert 문
 #{property} vo.BoardVO의 getter
 예 => #{subject} => vo.getSubject(); 값 : 안녕하세요 ~~
  -->
  
  <!-- 
  selectList => List안에 BoardVO를 담아서 반환
   -->
  
  <insert id="save" parameterType="vo.BoardVO">
  	insert into board2 values(board2_seq.nextVal,#{subject},#{writer},#{contents},0,#{reip},sysdate)
  </insert>
  
  
  <!-- num은 primary 키이기 때문에 단일행이다. List로 받지 않고
  ss.selectOne("board.detail"):BoardVO 로 받을 수 있다
   -->
  <select id="list" resultType="vo.BoardVO">
  SELECT num, subject,writer,hit,bdate FROM BOARD2 ORDER BY 1 DESC
  </select>
  
  <select id="detail" resultType="vo.BoardVO" parameterType="int">
  Select num, subject,writer, contents, hit,reip,bdate from board2 where num = #{num}
  </select>
  
  <delete id="del" parameterType="int">
  delete from board2 where num=#{num}
  </delete>
  
  <update id="up" parameterType="vo.BoardVO">
  	update board2 set subject=#{subject}, writer=#{writer}, contents=#{contents} where num=#{num}
  </update>
  
  
 </mapper>
