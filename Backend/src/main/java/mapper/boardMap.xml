<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="board">
 <!-- 
 insert 문
 #{property} vo.BoardVO의 getter
 예 => #{subject} => vo.getSubject(); 값 : 안녕하세요 ~~
  -->
  
  <insert id="save" parameterType="vo.BoardVO">
  	insert into board2 values(board2_seq.nextVal,#{subject},#{writer},#{contents},0,#{reip},sysdate)
  </insert>
  <select id="list" resultType="vo.BoardVO">
  SELECT num, subject,writer,hit,bdate FROM BOARD2 ORDER BY 1 DESC
  </select>
 </mapper>
